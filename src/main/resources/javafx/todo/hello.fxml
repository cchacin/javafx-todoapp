<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.todo.HelloController">
    <children>
        <Label text="First Name:" /> <TextField fx:id="firstNameField" prefColumnCount="30" />
        <Label text="Last Name:" />	<TextField fx:id="lastNameField" prefColumnCount="30" />

        <Button text="Say Hello" onAction="#sayHello" />

        <Label fx:id="messageLabel" styleClass="hello-message" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
